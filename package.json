{
  "name": "gaimin-platform",
  "version": "1.5.3",
  "main": "electron/dist/main.js",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./electron/dist && rimraf ./angular",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:watch": "ng build --watch",
    "build-local:watch": "ng build --configuration=local --watch",
    "all:watch": "npm run build && tsc --p electron && npm-run-all -p build:watch electron:watch",
    "all-s:watch": "npm run build && tsc --p electron && npm-run-all -p build:watch electron-s:watch",
    "angular-build": "ng build --configuration production --optimization=false --base-href ./",
    "electron-build": "tsc --p electron",
    "electron:watch": "tsc --p electron && npm run electron-s:watch",
    "electron-local:watch": "tsc --p electron && npm run electron . --local",
    "electron-s:watch": "electron . --dev",
    "electron": "ng build --base-href ./ && tsc --p electron && npm run electron-s:watch",
    "electron-local": "ng build --configuration=local --optimization=false --base-href ./ && tsc --p electron && electron . --local",
    "electron-prod": "ng build --configuration production --optimization=false --base-href ./ && tsc --p electron && electron .",
    "pack-mac": "electron-builder -m --dir",
    "dist-mac": "electron-builder -m",
    "pack-win": "electron-builder -w --dir",
    "dist-win": "electron-builder -w",
    "pack": "electron-builder -mw --dir",
    "dist": "electron-builder -mw",
    "win": "npm run clean && npm run angular-build && npm run electron-build && electron-builder -w",
    "win-dev": "npm run clean && ng build --configuration=staging --optimization=false --base-href ./ && tsc --p electron && electron-builder -w",
    "win-local": "npm run clean && ng build --configuration=local --optimization=false --base-href ./ && tsc --p electron && electron-builder -w"
  },
  "build": {
    "appId": "gaimin-platform",
    "productName": "Gaimin platform",
    "copyright": "Â© 2020 Gaimin",
    "artifactName": "gaimin-platform-v${version}.${ext}",
    "directories": {
      "buildResources": "./installer/",
      "app": "./",
      "output": "./dist/"
    },
    "protocols": {
      "name": "gaimin",
      "schemes": [
        "gaimin"
      ]
    },
    "files": [
      "./dist/gaimin-platform",
      "./electron/dist"
    ],
    "extraResources": [
      "./electron/resources/**",
      {
        "from": "./extraResources/",
        "to": "../../../dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "installer/gaimin-logo.ico",
      "publish": {
        "provider": "generic",
        "url": "https://storage.googleapis.com/platform_release_win/"
      }
    },
    "nsis": {
      "artifactName": "gaimin-platform-setup-v${version}.${ext}",
      "license": "installer/Gaimin_Master_Terms_Conditions_v1.rtf",
      "installerIcon": "installer/gaimin-logo.ico",
      "installerHeader": "installer/installerHeader.bmp",
      "installerHeaderIcon": "installer/gaimin-logo.ico",
      "installerSidebar": "installer/installerSidebar.bmp",
      "uninstallerIcon": "installer/gaimin-logo.ico",
      "uninstallerSidebar": "installer/installerSidebar.bmp",
      "runAfterFinish": true,
      "oneClick": false,
      "multiLanguageInstaller": true,
      "warningsAsErrors": true,
      "deleteAppDataOnUninstall": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": false,
      "include": "installer/winInstallerCustomization.nsh"
    }
  },
  "description": "Gaimin platform is an application for purchasing and playing video games.",
  "author": "Gaimin.io",
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/cdk": "^13.3.1",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@openid/appauth": "^1.2.7",
    "@popperjs/core": "^2.11.5",
    "@sentry/angular": "^6.19.2",
    "@sentry/electron": "^3.0.1",
    "auto-launch": "^5.0.5",
    "axios": "^0.26.1",
    "decompress-zip": "^0.3.3",
    "electron-dl": "^3.2.1",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.6.5",
    "metro4": "^4.3.4",
    "multicoin-address-validator": "^0.5.8",
    "ng-metro4": "^2.0.1",
    "ngx-pagination": "^5.1.0",
    "ngx-smart-modal": "^7.4.1",
    "ngx-toastr": "^14.2.2",
    "node-notifier": "^10.0.1",
    "open": "^8.4.0",
    "openid": "^2.0.6",
    "path": "^0.12.7",
    "pushy-electron": "^1.0.8",
    "rxjs": "~7.5.5",
    "systeminformation": "^5.9.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^13.1.0",
    "@angular-devkit/build-angular": "~13.3.0",
    "@angular/cli": "~13.3.0",
    "@angular/compiler-cli": "~13.3.0",
    "@angular/language-service": "~13.3.0",
    "@ng-select/ng-select": "^8.1.1",
    "@types/electron-localshortcut": "^3.1.0",
    "@types/jasmine": "~4.0.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.18.12",
    "codelyzer": "^6.0.2",
    "electron": "^17.4.0",
    "electron-builder": "^22.4.0",
    "jasmine-core": "~4.0.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.17",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ngx-clipboard": "^15.1.0",
    "ngx-pagination": "^5.1.0",
    "ngx-perfect-scrollbar": "^10.1.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "protractor": "~7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "~10.7.0",
    "tslint": "~6.1.0",
    "typescript": "~4.6.3"
  }
}
